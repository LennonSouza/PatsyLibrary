@model BookPublisher

<form id="bookPublisherForm" method="post" action="@Url.Action(Model.BookPublisherId == 0 ? "Insert" : "Update", "BookPublisher")">
    <input type="hidden" name="BookPublisherId" value="@Model.BookPublisherId" />

    <div class="mb-3">
        <label for="name" class="form-label fw-bold">Nome da Editora</label>
        <input type="text" class="form-control border-primary shadow-sm" id="name" name="Name" value="@Model.Name" required />
    </div>

    <button type="submit" class="btn btn-success w-100">
        <i class="fas fa-save"></i> Salvar
    </button>
</form>
