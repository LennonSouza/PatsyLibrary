@model Access

<form id="accessForm" method="post" action="@Url.Action(Model.AccessId == 0 ? "Insert" : "Update", "Access")">
    <input type="hidden" name="AccessId" value="@Model.AccessId" />

    <div class="mb-3">
        <label for="name" class="form-label fw-bold">Nome do Acesso</label>
        <input type="text" class="form-control border-primary shadow-sm" id="name" name="Name" value="@Model.Name" required />
    </div>

    <button type="submit" class="btn btn-success w-100">
        <i class="fas fa-save"></i> Salvar
    </button>
</form>
