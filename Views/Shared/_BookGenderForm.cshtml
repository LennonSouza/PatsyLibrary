@model BookGender

<form id="bookGenderForm" method="post" action="@Url.Action(Model.BookGenderId == 0 ? "Insert" : "Update", "BookGender")">
    <input type="hidden" name="BookGenderId" value="@Model.BookGenderId" />

    <div class="mb-3">
        <label for="name" class="form-label fw-bold">Nome do Genero</label>
        <input type="text" class="form-control border-primary shadow-sm" id="name" name="Name" value="@Model.Name" required />
    </div>

    <button type="submit" class="btn btn-success w-100">
        <i class="fas fa-save"></i> Salvar
    </button>
</form>
