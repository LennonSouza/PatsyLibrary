@model Department

<form id="departmentForm" method="post" action="@Url.Action(Model.DepartmentId == 0 ? "Insert" : "Update", "Department")">
    <input type="hidden" name="DepartmentId" value="@Model.DepartmentId" />

    <div class="mb-3">
        <label for="name" class="form-label fw-bold">Nome do Departamento</label>
        <input type="text" class="form-control border-primary shadow-sm" id="name" name="Name" value="@Model.Name" required />
    </div>

    <button type="submit" class="btn btn-success w-100">
        <i class="fas fa-save"></i> Salvar
    </button>
</form>
